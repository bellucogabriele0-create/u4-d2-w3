<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- copiamo e incolliamo l'inizializzazione della persistence-->
    <!-- gli diamo un nome che è importante perché nel codice Java dovremo richiamarla per nome -->
    <persistence-unit name="u4d2w3">
        <!-- all'interno della unit andremmo a inserire l'elenco delle
        classi e le properties con le loro property (K V)  -->
        <!--dafare aggiungere elenco entities-->
        <class>gabrielebelluco.entities.Evento</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/u4d2w3"/>
            <!--  u4-d1-w3 è il nome del DB se questo non è già stato creato in PgAdmin avrò un errore-->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--  Quest'ultima impostazione servirà per far creare/aggiornare le tabelle
             in automatico all'avvio dell'applicazione-->
        </properties>
    </persistence-unit>
</persistence>